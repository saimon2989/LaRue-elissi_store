{%- liquid 
  assign sid = section.id
  assign se_bks = section.blocks
  assign se_stts = section.settings
  assign ccol = 'col-lg-1x col-md-2x col-3x' | replace: '1x', se_stts.col | replace: '2x', se_stts.col_md | replace: '3x', se_stts.col_mb  -%}

<div class="nt_se_{{sid}} {{se_stts.layout}}">
     <h3 class="tc fw_sett" style="color: #333;font-size: 30px;margin:0 0 30px 0">{{se_stts.title}}</h3>
     <div class="row">
         {%- if se_bks.size > 0 -%}
             {%- for block in se_bks %}{% assign bk_stts = block.settings -%}
                  <div class="{{ccol}} tc mb__30">
                      {%- assign image = bk_stts.image -%}
                      {%- if image != blank %}{% assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                         <img src="data:image/svg+xml,%3Csvg%20viewBox%3D%220%200%20{{image.width}}%20{{image.height}}%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3C%2Fsvg%3E" data-src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-sizes="auto" class="lazyloadt4s lz_op_ef w__100" alt="{{image.alt}}" style="max-width:{{image.width}}px">
                      {%- endif -%}
                      {%- if bk_stts.title != blank %}<div class="name fw_sett">{{ bk_stts.title }}</div>{% endif -%}
                      {%- if bk_stts.service != blank %}<div class="service">{{ bk_stts.service }}</div>{% endif -%}
                  </div>
             {%- endfor -%}
         {%- endif -%}
     </div>
</div>

{%- style -%}
.nt_se_{{sid}} img:hover{opacity: .8 !important;}
.nt_se_{{sid}} img{ -webkit-border-radius: {{se_stts.img_round}}%;-moz-border-radius: {{se_stts.img_round}}%;border-radius: {{se_stts.img_round}}%;}
.nt_se_{{sid}} .name{margin: 23px 0 7px;color: #333333;font-size: 15px;position: relative;}
.nt_se_{{sid}} .name a{position: absolute;top: 0;left: 0;width: 100%;height: 100%;}
@media(max-width:767px){ .nt_se_{{sid}} .service.tc {margin-bottom: 15px;} }
{%- endstyle -%}
{%- render 'section_css' -%}

